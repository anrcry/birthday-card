{
  "hosting": {
    "public": "build",
    "site": "birthday-card",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(webp|jpg|jpeg|gif|png|svg)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=604800"
        }]
      },
      {
        "source": "**/*.@(css|js)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=86400"
        }]
      },
      {
        "source": "404.html",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=300"
        }]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "hosting": {
      "port": 8003,
	    "host": "127.0.0.1"
    },
    "storage": {
      "port": 8004,
	    "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true,
      "port": 8006,
	    "host": "127.0.0.1"
    },
    "hub":{
      "host":"127.0.0.1",
      "port":8007
    },
    "logging":{
      "host":"127.0.0.1",
      "port":8008
    }
  }
}
